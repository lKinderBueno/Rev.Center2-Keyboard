        <Rectangle x:Name="Key_usa" HorizontalAlignment="Left" Height="167.773" Margin="18.077,59.05,0,0" Stroke="Black" VerticalAlignment="Top" Width="511.923" Grid.Row="1" MouseDown="Key_usa_MouseDown">
